.item {
  width: 100%;
  display: flex;
  padding: 40rpx;
  font-size: 30rpx;
  color: rgb(177, 177, 177);
  flex-wrap: wrap;
}
.info {
  width: 56%;
  height: 200rpx;
}
.info>text {
  display: flex;
  width: 100%;
  padding: 6rpx 12rpx;
}
.img {
  width: 140rpx;
  height: 200rpx;
}
.average {
  color: orange;
}
.title {
  font-size: 34rpx;
  color: #000;
}
.more {
  padding: 14rpx 26rpx;
  height: 40rpx;
  margin: 72rpx 0;
  border: 2rpx solid rgb(244, 101, 7);
  color: rgb(244, 101, 7);
}